<div class="card">
  <h6 class="card-header">Sample Storage Location</h6>

  <div class="form-group row">
    <%=f.hidden_field(:sample_name_or_barcode, :value => barcode) %>
    <label for="container_type" class="col-auto col-form-label col-form-label-sm">Container Type:</label>
    <div class="col-auto">
      <%=f.collection_select(:container_type, @containers, :c_value, :c_value, {include_blank: 'Select..'}, {class: "form-control"}) %>
    </div>

    <label for="container_name" class="col-auto col-form-label col-form-label-sm">Name/#:</label>
    <div class="col-auto">
      <%=f.text_field(:container_name, class: "form-control") %>
    </div>
  </div>

  <div class="form-group row">
    <label for="position_in_container" class="col-auto col-form-label col-form-label-sm">Position in Container:</label>
    <div class="col-auto">
      <%=f.text_field(:position_in_container, class: "form-control" )  %>
    </div>

    <label for="freezer_location_id" class="col-auto col-form-label col-form-label-sm">Room/Freezer:</label>
    <div class="col-auto">
      <%= f.collection_select(:freezer_location_id, @freezer_locations, :id, :room_and_freezer, {:include_blank => 'Select..'}, {class: "form-control"}) %>
    </div>
  </div>

</div>


<%= bootstrap_form_for(@user, url: {action: "add_user"}) do |f| %>
  <%= f.text_field :login %>
  <%= f.email_field :email %>
  <%= f.password_field :password, label: "Password" %>
  <%= f.password_field :password_confirmation, label: "Confirm password" %>
  <%= f.submit "Sign up", class: "btn btn-primary" %>
<% end %>
